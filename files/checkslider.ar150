#!/bin/sh
checkslider() { grep 'gpio-8.*hi' /sys/kernel/debug/gpio; }
checkports() {
	local up i r=0;
	for i in "wan"; do
		if /bin/ubus list | grep -q "network.interface.${i}"; then
			json_load "$(/bin/ubus call network.interface.${i} status)"; json_get_vars up;
			if [ "$up" -eq 1 ] && [ "$up" -gt "$r" ]; then r="$up"; fi
		fi
	done
	return "$r"
}
